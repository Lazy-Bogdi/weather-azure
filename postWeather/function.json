{
    "bindings": [
        {
            "authLevel": "anonymous",
            "type": "httpTrigger",
            "direction": "in",
            "name": "req",
            "methods": [
                "post"
            ],
            "route": "postWeather"
        },
        {
            "type": "http",
            "direction": "out",
            "name": "$return"
        },
        {
            "type": "cosmosDB",
            "direction": "out",
            "name": "outputDocument",
            "connectionStringSetting": "COSMOS_CONN_STRING",
            "databaseName": "weatherdb",
            "containerName": "temperatures",
            "createIfNotExists": true,
            "partitionKey": "/date"  
        }
    ]
}